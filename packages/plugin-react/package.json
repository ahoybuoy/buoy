  "license": "MIT",
  "peerDependencies": {
    "@buoy-design/core": "workspace:*"
  },
  "dependencies": {
    "@buoy-design/scanners": "workspace:*"
  },
  "devDependencies": {
    "@buoy-design/core": "workspace:*",
    "typescript": "^5.0.0"
  }
