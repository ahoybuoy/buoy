{
  "name": "@buoy-design/plugin-react",
  "version": "0.0.1",
  "description": "Buoy plugin for React and Next.js component scanning",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
